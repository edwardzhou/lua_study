<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.m123.DDZ"
    android:versionCode="20"
    android:versionName="2.0.0" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="16" />

    <uses-feature android:glEsVersion="0x00020000" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    
    <!-- permissions only for leyifu -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.BROADCAST_SMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:name="cn.com.m123.DDZ.DouDiZhuApplicaion">
        <meta-data android:name="build" android:value="v20140521.03"/>
        
        <activity android:name="cn.com.m123.DDZ.DouDiZhu_Lua"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                  android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="cn.com.m123.DDZ.NetworkListener" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="ShareActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>

        <receiver android:name="cn.com.m123.DDZ.push.PushReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
                <data android:scheme="package" >
                </data>
            </intent-filter>
            <intent-filter>
                <action android:name="cn.com.m123.DDZ.fetch_alarm" />
            </intent-filter>
            <intent-filter>
                <action android:name="cn.com.m123.DDZ.push_alarm" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" >
                </action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <service android:name="cn.com.m123.DDZ.push.PushService"></service>
        
        <!-- components of leyifu -->
        <activity
            android:name="com.astep.pay.TheDialogActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.astep.pay.TheActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <service
            android:name="com.astep.pay.TheService"
            android:enabled="true" />

        <activity
            android:name="com.astep.pay.rd.Rd1Activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.umpay.huafubao.ui.BillingActivity"
            android:configChanges="orientation|keyboardHidden"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name="com.umpay.huafubao.ui.BillingPadActivity"
            android:configChanges="orientation|keyboardHidden"
            android:excludeFromRecents="true" >
        </activity>

        <service android:name="com.umpay.huafubao.service.AppUpgradeService" />
        <!-- end of components of leyifu -->
    </application>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

</manifest>
